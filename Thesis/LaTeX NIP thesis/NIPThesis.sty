  \begin{center}
    \hyphenpenalty=10000\Large\uppercase\expandafter{\@title}
  \end{center}
  \vfill
  \begin{center}
    \large\rm
    \@author\\
    \emph{\expandafter{\@email}}
  \end{center}
  \vfill
